set imap_user="drnewman"
set imap_pass="3hammers&17nails"
#set imap_checkinterval="30"
bind index "\Ca" 'imap-fetch-mail'

set folder={ptexchange1.phrihawaii.org}
set spoolfile={ptexchange1.phrihawaii.org}INBOX
fcc-hook ~A {ptexchange1.phrihawaii.org}"Sent Items"
set copy=yes
# Saves copies of outgoing mail to "Sent Items" folder

# how to query the exchange ldap database
set query_command = "~/bin/fetch-exchange-mail '%s'"
bind editor "\t" complete-query
# tab completion uses address book over ldap instead of aliases

# other usefull stuff
set forward_quote
set include
set indent_str="> "

# print through anything to postscript
set print_command="html2text | lpr"

auto_view text/html # see ~/.mailcap
